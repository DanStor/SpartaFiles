<header>
  <h2><%= @hero.name %></h2>
  <p>Fact: <%= @hero.fact %></p>
</header>

<div class="">
  <img src="<%= @hero.image %>" alt="<%= @hero.img_alt %>">
</div>

<div class="">
  <a href="/<%= @hero.id %>/edit">Edit Character</a>
  <form class="" action="/<%= @hero.id %>" method="post">
    <input type="submit" value="Delete Character">
    <!-- Perform the delete method on this root -->
    <input type="hidden" name="_method" value="delete">
  </form>
</div>
