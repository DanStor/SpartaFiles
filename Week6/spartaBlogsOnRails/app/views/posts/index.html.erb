<%= link_to "New Post", new_post_path %>
<h1>Sparta Blogs (again)!</h1>

<% @posts.each do |post| %>
  <hr>
  <%= link_to "#{post.title}", post %>
  <p><%= post.body %></p>
  <p><%= post.author %></p>
  <!-- Go to edit of PostsController(edit this post) -->
  <%= link_to "Edit", edit_post_path(post) %>
  <%= link_to "Delete", post, method: :delete %>
  <br>
<% end %>
