<h1 class="bg-danger d-block text-center text-white pt-5 pb-5">Mario Characters</h1>

<h2 class="bg-info d-block text-center text-white pt-2 pb-2">Big Names</h2>
<div class="container">
  <div class="row">
    
    <div class="card-deck">
      <% @heroes.each do |hero| %>
      <div class="col-3">
        <div class="card">
          <img class="card-img-top" src="..." alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= hero.name %></h5>
            <a href="<%= hero.id %>" class="btn btn-primary">Learn More</a>
          </div>
        </div>
      </div>
      <% end %>
    </div>

  </div>
</div>

<h2 class="bg-info d-block text-center text-white pt-2 pb-2">Small Names</h2>
<div class="container">
  <div class="row">

    <% @heroes.each do |hero| %>
      <div class="col-6">
        <h4><a href="<%= hero.id %>"><%= hero.name %></a></h4>
      </div>
    <% end %>

  </div>
</div>
